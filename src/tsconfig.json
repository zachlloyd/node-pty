{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "rootDir": ".",
    "outDir": "../lib",
    "sourceMap": true,
    "lib": [
      "es2015"
    ],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "typeRoots": ["../node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "scripts",
    "index.js",
    "demo.js",
    "lib",
    "test",
    "examples"
  ]
}
